<div id="signup-section" class="devise-page form-page session-main log small">

  <div id="toolbar-container">  
    <img alt="Open" id="simple-menu" class="icon-menu" 
         src="https://content.codecademy.com/projects/z2d/stories/menu-black.svg" />
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= link_to root_path do %>
      <%= image_tag "fmf-logo-black.png", id: "logo", class: "icon-logo" %>
    <% end %>
  </div>
    
  <div id="signup-container" class="devise-container">
    <div id="signup-content" class="devise-content">

      <div class="container devise-page-title">
        <h1>Inquiry sign-up</h1>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { :class => "form-section" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, type: 'email', autofocus: true, autocomplete: 'email' %>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters min.)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :confirm_password %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="submit">
          <%= f.submit "Sign up", :class => "btn btn-submit" %>
        </div>
        <% end %>
          
        <div class="devise-links">
          <%= render "devise/shared/links" %>
        </div> 
          
      </div>
    </div>
  </div>
</div>
